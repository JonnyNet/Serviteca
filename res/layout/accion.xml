<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoapp1"
    android:orientation="vertical"
    android:padding="20dp" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/logo"
        android:src="@drawable/logo2" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp" >

        <TableRow
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <Button
                android:id="@+id/vehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/imgbutton"
                android:contentDescription="@string/registrar_vehiculo"
                android:drawableTop="@drawable/auto"
                android:text="@string/vehiculo"
                android:textColor="#FFFFFF"
                android:typeface="monospace" 
                android:textSize="20sp"/>
            
            <Button
                android:id="@+id/compras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:background="@drawable/imgbutton"
                android:contentDescription="@string/orden_de_compra"
                android:drawableTop="@drawable/cartvacio"
                android:text="@string/servicios"
                android:textColor="#FFFFFF"
                android:typeface="sans"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_marginTop="40dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <Button
                android:id="@+id/det"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/imgbutton"
                android:contentDescription="@string/detalles_de_compra"
                android:drawableTop="@drawable/ver"
                android:text="@string/detalles"
                android:textColor="#FFFFFF"				android:textSize="20sp"
                android:typeface="sans" />

            <Button
                android:id="@+id/config"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:background="@drawable/imgbutton"
                android:contentDescription="@string/config"
                android:drawableTop="@drawable/configuraciones"
                android:text="@string/configurar"
                android:textColor="#FFFFFF"
                android:typeface="sans"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_marginTop="40dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <Button
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/imgbutton"
                android:contentDescription="@string/detalles_de_compra"
                android:drawableTop="@drawable/usuarios"
                android:text="@string/usuarios"
                android:textColor="#FFFFFF"
                android:typeface="sans" 
                android:textSize="20sp"/>

            <Button
                android:id="@+id/salir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:background="@drawable/imgbutton"
                android:contentDescription="@string/config"
                android:drawableTop="@drawable/logout"
                android:text="@string/salir"
                android:textColor="#FFFFFF"
                android:typeface="sans"
                android:textSize="20sp" />

        </TableRow>
    </TableLayout>
</LinearLayout>